<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gridview1"
    android:layout_marginBottom="1dp"
    android:gravity="center"> <!-- Căn giữa toàn bộ nội dung -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="3dp"

            app:cardElevation="0dp"
            app:cardCornerRadius="7dp"
            android:layout_gravity="center"> <!-- Căn giữa CardView -->

            <ImageView
                android:id="@+id/imgnsp"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@mipmap/ic_launcher" /> <!-- Thay your_image bằng ảnh của bạn -->

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
android:layout_marginTop="3dp"

            android:layout_gravity="center"> <!-- Căn giữa LinearLayout -->

            <TextView
                android:id="@+id/ten"
                android:text="Tên nhóm sp"
                android:textColor="#000000"
                android:textSize="8sp"

                android:textStyle="bold"
android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/idma"
        android:textSize="1sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>