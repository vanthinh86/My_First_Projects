<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/listviewdh"
    android:padding="8dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imgsp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:contentDescription="Hình ảnh sản phẩm"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="ID đơn hàng:"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000" />

                <TextView
                    android:id="@+id/txt_Iddathang"
                    android:textColor="#FF0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Tên SP:"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#3DBF06" />

                <TextView
                    android:id="@+id/txtTensp"
                    android:textColor="#2FDC00"
                    android:textAllCaps="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Mã SP:"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtMasp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Số lượng:"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSoLuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Đơn giá:"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#FF6600" />
            </LinearLayout>

            <!-- Trạng thái thanh toán (hiển thị text) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái:"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTrangThaiThanhToan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa thanh toán"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722" />
            </LinearLayout>

            <!-- Phương thức thanh toán -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Phương thức TT:"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rd_tien_mat"
                        android:textSize="10sp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:layout_marginEnd="8dp"
                        android:text="Tiền mặt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/rd_chuyen_khoan"
                        android:textSize="10sp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="CK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RadioGroup>
            </LinearLayout>

            <!-- Trạng thái thanh toán (để chọn) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="TT thanh toán:"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_payment_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rd_chua_thanh_toan"
                        android:textSize="10sp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:layout_marginEnd="8dp"
                        android:text="Chưa TT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/rd_da_thanh_toan"
                        android:textSize="10sp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="Đã TT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái đơn hàng:"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp" />

                <RadioGroup
                    android:id="@+id/rg_order_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rd_da_dat_hang"
                        android:textSize="10sp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="Đã đặt hàng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/rd_dang_van_chuyen"
                        android:textSize="10sp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="Đang vận chuyển"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/rd_van_chuyen_thanh_cong"
                        android:textSize="10sp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="Vận chuyển thành công"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/rd_hoan_hang"
                        android:textSize="10sp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="Hoàn hàng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RadioGroup>
            </LinearLayout>
            
            <!-- Thông tin ngày cập nhật chỉ hiển thị cho admin -->
            <LinearLayout
                android:id="@+id/layout_ngay_capnhat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Cập nhật:"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/txt_ngay_capnhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#666666" />
            </LinearLayout>
            
            <!-- Nút Lưu trạng thái duy nhất -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">
                
                <Button
                    android:id="@+id/btnLuuTrangThai"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:text="Lưu trạng thái"
                    android:textColor="@color/button_text_color"
                    android:background="@drawable/button_style_selector"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:elevation="2dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
