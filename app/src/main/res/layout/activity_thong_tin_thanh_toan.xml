<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"

    android:background="#FFD400"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/imgback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"


        android:padding="10dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FFFFFF"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÊM ĐỊA CHỈ GIAO HÀNG"
                android:textSize="20sp"

                android:textStyle="bold"
                android:textColor="#001BC5"
                android:layout_marginBottom="5dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/tenkh"
                android:background="@drawable/edittext"
                android:layout_marginBottom="6dp"
                android:drawablePadding="8dp"
                android:hint="Tên Khách Hàng"
                android:padding="8dp"
                android:textColorHint="#aaa"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="3dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/sdt"
                android:background="@drawable/edittext"
                android:layout_marginBottom="2dp"
                android:drawablePadding="8dp"
                android:inputType="number"
                android:hint="SĐT"
                android:textColorHint="#aaa"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="0dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/diachi"
                android:background="@drawable/edittext"


                android:drawablePadding="8dp"
                android:hint="Địa chỉ nhận hàng"
                android:padding="8dp"
                android:textColorHint="#aaa"

                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="5dp"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:text="Tổng tiền thanh toán:"
android:textStyle="bold"
        android:textSize="12dp"


        android:padding="8dp"


        android:textColor="#FF0000"

        android:layout_marginTop="0dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/tienthanhtoan"

android:textSize="17dp"


                android:padding="8dp"
                android:textColorHint="#aaa"
android:text="0"
                android:textColor="#FF0000"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="0dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"


        android:textSize="17dp"


        android:padding="8dp"
        android:textColorHint="#aaa"
        android:text="đ"
        android:textColor="#FF0000"
        android:textColorHighlight="@color/cardview_dark_background"
        android:layout_marginTop="0dp"/>
</LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/btnxacnhandathang"
                android:text="Xác nhận đặt hàng"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="1dp"
                android:backgroundTint="#00FFCC"
                app:cornerRadius = "20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>