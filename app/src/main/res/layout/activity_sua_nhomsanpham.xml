<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="16dp"
    android:background="#AEA726"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/imgback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"


        android:padding="10dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa Thông Tin Nhóm Sản Phẩm"
                android:textSize="15sp"

                android:textStyle="bold"
                android:textColor="#001BC5"
                android:layout_marginBottom="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/ten"
                android:background="@drawable/edittext"

                android:drawablePadding="8dp"
                android:hint="Tên Nhóm Sản Phẩm"
                android:textColorHint="#aaa"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="0dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imgnsp"
                    android:background="@drawable/edittext"

                    android:drawablePadding="8dp"

                    android:padding="8dp"

                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:layout_marginTop="5dp"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:text="Chọn ảnh"
                    android:backgroundTint="#2AD189"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/btnAddImg"
                    android:layout_height="50dp"></Button>
            </LinearLayout>
            <Button
                android:id="@+id/btnsua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#FF5722"
                android:text="Sửa"
                android:textColor="@android:color/white" />

                <TextView
                android:id="@+id/id"
                android:textSize="1sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>